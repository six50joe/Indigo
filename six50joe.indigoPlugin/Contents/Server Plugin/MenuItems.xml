<?xml version="1.0"?>
<!-- If your plugin wants to add menu items to it's submenu off the new Extensions menu,
	 define them here. Each should have a unique menu id, a Name, and an Action. The last
	 is a method name in your python file that will be called when the user selects that
	 menu item. Note - nothing will be returned to the client, so if you need to communicate
	 back to the user you can post information into the Event Log.
-->
<MenuItems>
    <SupportURL>https://github.com/six50joe/Indigo</SupportURL>
	<MenuItem id="mailRecentLogs">
		<Name>Mail Recent Logs</Name>
		<CallbackMethod>mailRecentLogs</CallbackMethod>
	</MenuItem>
	<MenuItem id="archiveLogs">
		<Name>Archive Logs</Name>
		<CallbackMethod>archivePriorMonthLogs</CallbackMethod>
	</MenuItem>
	<MenuItem id="redrawCharts">
		<Name>Redraw Charts</Name>
		<CallbackMethod>redrawCharts</CallbackMethod>
	</MenuItem>
	<MenuItem id="pingAddress">
		<Name>Ping Address...</Name>
		<ConfigUI actionId="pingAddress"/>
	</MenuItem>
	<MenuItem id="pingOtherHouse">
		<Name>Ping Other House...</Name>
		<ConfigUI actionId="pingOtherHouse"/>
	</MenuItem>
	<MenuItem id="checkElectric">
		<Name>Check Electric</Name>
		<ConfigUI actionId="checkElectric"/>
	</MenuItem>
	<MenuItem id="managePresenceDevices">
		<Name>Manage Presence Devices</Name>
		<ConfigUI actionId="managePresenceDevices"/>
	</MenuItem>
	<MenuItem id="checkDevicePresence">
		<Name>Check Device Presence</Name>
		<CallbackMethod>checkDevicePresence</CallbackMethod>
	</MenuItem>
	<MenuItem id="getPropaneLevel">
		<Name>Get Propane Level</Name>
		<ConfigUI actionId="getPropaneLevel"/>
	</MenuItem>
	<MenuItem id="calibratePropaneLevel">
		<Name>Calibrate Propane Level</Name>
		<ConfigUI actionId="calibratePropaneLevel"/>
	</MenuItem>
	<MenuItem id="separator" />
	<MenuItem id="checkPluginUpdates">
		<Name>Check for plugin updates</Name>
		<CallbackMethod>checkPluginUpdates</CallbackMethod>
	</MenuItem>
	<MenuItem id="updatePlugin">
		<Name>Update Plugin</Name>
		<CallbackMethod>updatePlugin</CallbackMethod>
	</MenuItem>
</MenuItems>
